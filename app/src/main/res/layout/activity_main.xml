<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question"
        android:layout_margin="@dimen/_8sdp"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_true"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/true_color"
        android:text="@string/true_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_question"
        android:layout_margin="@dimen/_8sdp"
        android:textAllCaps="true"
         app:layout_constraintWidth_percent="0.3"
           />

    <Button
        android:id="@+id/btn_false"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/false_color"
        android:text="@string/false_button"
        android:textAllCaps="true"
app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintTop_toBottomOf="@id/txt_question"
        android:layout_margin="@dimen/_8sdp"
         app:layout_constraintWidth_percent="0.3"
           />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:backgroundTint="@color/blue"
        android:text="@string/next_button"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_true"
        app:layout_constraintWidth_percent="0.3" />
</androidx.constraintlayout.widget.ConstraintLayout>